{% extends 'base-front.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <!-- Inner Page Banner Area Start Here -->
    <div class="inner-page-banner-area" style="background-image: url('{{ asset('Front/img/product/banner2.jpg') }}');">
        <div class="container">
            <div class="pagination-area">
                <h2 class="inner-section-title-textprimary">Our<span> Shop</span></h2>
                <ul>
                    <li><a href="#">Home</a> -</li>
                    <li><a href="#">Pages</a> -</li>
                    <li>Shop 2</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Inner Page Banner Area End Here -->
    <!-- Our Store Area Start Here -->
    <div class="section-space-default body-bg">
        <div class="container">
            <div class="inner-shop-top-left text-right">
                <div class="dropdown">
                    <button class="btn sorting-btn dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">Default Sorting<span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">Date</a></li>
                        <li><a href="#">Best Sale</a></li>
                        <li><a href="#">Rating</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                    <div class="thegym-sidebar filter-parameter-wrapper">
                        <div class="sidebar-box">
                            <div class="single-item-filter-parameter">
                                <h3>Shop Categories</h3>
                                <ul class="filter-sort">
                                    <li><a href="#">Boxing</a></li>
                                    <li><a href="#">Yoga</a></li>
                                    <li><a href="#">Fitness</a></li>
                                    <li><a href="#">Meditation</a></li>
                                    <li><a href="#">Workout</a></li>
                                    <li><a href="#">exercise</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="sidebar-box">
                            <div class="single-item-filter-parameter">
                                <h3>Sort By</h3>
                                <ul class="filter-sort">
                                    <li><a href="#">Default</a></li>
                                    <li><a href="#">Popularity</a></li>
                                    <li><a href="#">Average rating</a></li>
                                    <li><a href="#">Newness</a></li>
                                    <li><a href="#">Price: Low to High</a></li>
                                    <li><a href="#">Price: High to Low</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="sidebar-box">
                            <div class="single-item-filter-parameter">
                                <h3>Price</h3>
                                <ul class="filter-price">
                                    <li><a href="#">All</a></li>
                                    <li><a href="#">$0.00 - 50.00</a></li>
                                    <li><a href="#">$50.00 - 100.00</a></li>
                                    <li><a href="#">$100.00 - 150.00</a></li>
                                    <li><a href="#">$150.00 - 200.00</a></li>
                                    <li><a href="#">$200.00+</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="sidebar-box">
                            <div class="single-item-filter-parameter">
                                <h3>Color</h3>
                                <ul class="filter-color">
                                    <li><a href="#">Blue</a></li>
                                    <li><a href="#">Brown</a></li>
                                    <li><a href="#">Gray</a></li>
                                    <li><a href="#">Green</a></li>
                                    <li><a href="#">Orange</a></li>
                                    <li><a href="#">Black</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="sidebar-box">
                            <div class="single-item-filter-parameter">
                                <h4>Tag</h4>
                                <ul class="filter-tag">
                                    <li><a href="#">yoga</a></li>
                                    <li><a href="#">gym</a></li>
                                    <li><a href="#">fitness</a></li>
                                    <li><a href="#">workout</a></li>
                                    <li><a href="#">meditation</a></li>
                                    <li><a href="#">yoga</a></li>
                                    <li><a href="#">classes</a></li>
                                    <li><a href="#">fitness</a></li>
                                    <li><a href="#">yoga</a></li>
                                    <li><a href="#">gym</a></li>
                                    <li><a href="#">fitness</a></li>
                                    <li><a href="#">workout</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
                    <div class="row our-store-wrapper">

                        {% for produit in produits %}
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 col-mo-12">
                            <div class="product-box-layout1 item-mb">
                                <div class="product-img accent-color">
                                    <a href="/produits/produit/{{ produit.id }}"><img src="{{ asset('uploads/images/') }}{{ produit.image }}" alt="product"></a>
                                </div>
                                <div class="product-content-wrapper">
                                    <div class="product-content">
                                        <ul class="product-cart-view">
                                            <li><a href="#"><i class="fa fa-expand" aria-hidden="true"></i></a></li>
                                            <li><a href="#">add to cart</a></li>
                                            <li><a href="#"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
                                        </ul>
                                        <h3><a href="#">{{ produit.nom }}</a></h3>
                                        <ul class="product-rating">
                                            {{ produit.rate |rating }}
                                        </ul>
                                        <div class="product-price">{{ produit.prix }} DT</div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <ul class="pagination-center mb-xs">
                        <li><a href="#"><i class="fa fa-arrow-left" aria-hidden="true"></i></a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#"><i class="fa fa-arrow-right" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Our Store Area End Here -->

{% endblock %}
