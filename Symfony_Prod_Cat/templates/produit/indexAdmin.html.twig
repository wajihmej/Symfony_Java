{% extends 'base-back.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Data Tables</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title mt-0 mb-1">Produit Table</h4>
                    <a href="{{ path('app_produit') }}" class="btn btn-info">Front Produit</a>
                    <a href="{{ path('app_produit_new') }}" class="btn btn-info">Creer Produit</a>
                    <br>
                    {% for message in app.flashes('info')  %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('info-edit')  %}
                        <div class="alert alert-warning">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('info-delete')  %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <br>
                    <div id="divs">
                        <input class="form-control" type="text" id="search" placeholder="üîç">
                        <a style="color:#FF0000;" class="tg-btn" href="" id="idup">UP ‚¨ÜÔ∏è</a>
                        <a style="color:#25DD28;" class="tg-btn" href="" id="iddown">DOWN ‚¨áÔ∏è</a>
                    </div>

                    <table id="t" class="table dt-responsive nowrap w-100">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Categorie</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Rate</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody id="all">
                            {% for produit in produits %}
                        <tr>
                            <td>{{ produit.id }}</td>
                            <td>
                                <img width="100" height="100" src="{{ asset('uploads/images/') }}{{ produit.image }}" >
                            </td>
                            <td>{{ produit.categorie.nom }}</td>
                            <td>{{ produit.nom }}</td>
                            <td>{{ produit.prix }}</td>
                            <td>{{ produit.rate }}</td>
                            <td>
                                <a href="/produits/Admin/edit/{{ produit.id }}" class="btn btn-warning">Edit</a>
                                <a href="/produits/Admin/delete/{{ produit.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous s√ªr de supprimer ?');">Delete</a>
                            </td>
                        </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">no records found</td>
                                </tr>
                            {% endfor %}

                        </tbody>
                        <tbody id="search">
                        </tbody>
                    </table>

                </div> <!-- end card body-->
            </div> <!-- end card -->
        </div><!-- end col-->
    </div>
    <!-- end row-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">
    </script>
